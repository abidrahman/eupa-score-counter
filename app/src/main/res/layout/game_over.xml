<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <Button
        android:id="@+id/stopButton"
        android:onClick="backToScores"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginBottom="66dp"
        android:text="Back to Score!"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GAME"
        android:id="@+id/game"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="#ffffae30"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="OVER!"
        android:id="@+id/over"
        android:textSize="85sp"
        android:textStyle="bold"
        android:textIsSelectable="true"
        android:textColor="#ffffae30"
        android:layout_below="@+id/game"
        android:layout_alignLeft="@+id/game"
        android:layout_alignStart="@+id/game" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This Team Wins!"
        android:id="@+id/winningTeam"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/over"
        android:layout_centerHorizontal="true"
        tools:layout="@layout/game_over"
        android:textSize="40dp"
        android:textIsSelectable="false"
        android:textColor="#ffffae30"
        android:textStyle="bold|italic" />



</RelativeLayout>